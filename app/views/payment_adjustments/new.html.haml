%h1 New payment
%div
  Select the Registrants to adjust payments for:
%br
.payment_details
  - if @payment.present?
    = render :partial => "/shared/error_messages", :object => @payment
  = form_tag(adjust_payment_choose_payment_adjustments_path, :method => :post) do
    = label_tag(:registrant_id, "Registrants")
    = select_tag(:registrant_id, options_from_collection_for_select(@registrants, "id", "with_id_to_s"), :multiple => true, class: 'chosen-select')
    %br
    = submit_tag 'Start Payment Adjustment', class: "button"
  %div
    = link_to 'Back', list_payment_adjustments_path
