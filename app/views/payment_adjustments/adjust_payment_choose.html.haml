%h1 Payment Adjstments
- if mixpanel?
  :javascript
    mixpanel.track("New Payment Page Loaded")

- if can? :refund_choose, :payment_adjustment
  %h1 Paid Items
  %table.sortable
    %thead
      %tr
        %th Registrant
        %th Item
        %th Paid Amount
        %th Details (only required for some items)
    %tbody
      - @p.paid_details.each do |paid_detail|
        %tr
          %td= paid_detail.registrant
          %td= paid_detail.expense_item
          %td= paid_detail.amount
          %td= paid_detail.details

  = form_tag(refund_choose_payment_adjustments_path, :method => :post) do
    - @p.registrants.each do |reg|
      = hidden_field_tag "registrant_id[]", reg.id
    = submit_tag "Refund some items", :class => "payment_link registration_button"
  %hr

- if can? :onsite_pay_confirm, :payment_adjustment
  %h1 Chosen (but unpaid) Details
  %table.sortable
    %thead
      %tr
        %th Registrant
        %th Item
        %th Cost
        %th Details (only required for some items)
    %tbody
      - @p.unpaid_details.each do |unpaid_detail|
        %tr
          %td= unpaid_detail.registrant
          %td= unpaid_detail.expense_item
          %td= unpaid_detail.amount
          %td= unpaid_detail.details
  = form_tag(onsite_pay_confirm_payment_adjustments_path, :method => :post) do
    - @p.registrants.each do |reg|
      = hidden_field_tag "registrant_id[]", reg.id
    = submit_tag "Choose Items to Mark Paid", :class => "payment_link registration_button"

%div
  = link_to 'Back', new_payment_adjustment_path
