= simple_form_for([@coupon_code]) do |f|
  = render partial: "/shared/error_messages", object: @coupon_code
  = f.input :name
  = f.input :code
  = f.input :description
  = f.input :inform_emails
  = f.input :price
  = f.input :maximum_registrant_age
  = f.input :max_num_uses
  = f.association :expense_items, collection: ExpenseItem.includes(:translations).order(:name).all, label_method: :to_s, include_blank: true, input_html: { multiple: true, class: "chosen-select" }
  = f.association :lodging_room_options, collection: LodgingRoomOption.order(:name).all, label_method: :to_label, include_blank: true, input_html: { multiple: true, class: "chosen-select" }
  = f.button :submit
