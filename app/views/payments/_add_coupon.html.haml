
- if CouponCode.any?
  .coupon_offer
    .js--hiddenToggleMenu.focus_button= t(".have_a_coupon")
  .js--hiddenToggle
    = form_tag apply_coupon_payment_path(@payment) do |f|
      = label_tag :coupon_code, t(".coupon_code")
      = text_field_tag :coupon_code
      = submit_tag t(".submit"), class: 'focus_button'
