%h2= "#{judges.count} #{judge_type} Judges"
%table.sortable
  %thead
    %th Judge
    %th
  %tbody
    - judges.each do |judge|
      - next unless judge.persisted?
      %tr
        %td= judge.name
        %td
          - if policy(judge).destroy?
            = link_to 'Delete', competition_judge_path(judge.competition, judge), data: {confirm: 'Are you sure?'}, method: :delete
