.competitor_details_block
  .competitor_details
    %span= "##{@competitor.bib_number}"
    %span= @competitor.name
    %span= "#{@competitor.gender}, Age #{@competitor.age}"
    %span.status{ class: @competitor.distance_attempt_status_code }= @competitor.distance_attempt_status

  %br

  = render partial: 'attempt_list', locals: { list: @competitor.distance_attempts, display_delete: false, title: "#{@competitor}'s attempts" }
