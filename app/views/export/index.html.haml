%h1 Export Menu

%hr
= simple_form_for :data, :url => export_download_payment_details_path(:format => :xls), :method => :get do |f|
  .row
    .small-4.columns
      %b Download Details on registrants who bought:
    .small-4.columns
      = f.select :expense_item_id, ExpenseItem.all.map { |ei| [ei, ei.id] }
    .small-4.columns
      = f.button :submit, "Export Registrants who bought this item", :class => "multiclick button"

%hr
= link_to 'Download Event Info', export_download_events_path(:format => :xls)

%hr
= link_to "Download all Registrants and their paid payments", export_download_all_payments_path(:format => :xls)

