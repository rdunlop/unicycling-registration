<fieldset class="data_block">
  <legend>Expenses</legend>
  <table>
    <thead>
      <tr>
        <th>Item</th>
        <th>Cost</th>
        <th>Paid?</th>
      </tr>
    </thead>

    <tbody>
      <% @registrant.paid_expense_items.each do |pei| %>
        <tr>
          <td><%= pei %></td>
          <td><%= print_formatted_currency(pei.cost) %></td>
          <td>&#x2713;</td>
        </tr>
      <% end %>
      <% @registrant.owing_expense_items.each do |ce| %>
        <tr>
          <td><%= ce %></td>
          <td><%= print_formatted_currency(ce.cost) %></td>
          <td>&#x2717;</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</fieldset>
