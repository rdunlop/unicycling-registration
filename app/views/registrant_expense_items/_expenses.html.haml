.expenses
  .data_block
    %fieldset
      %legend= t(".registrants_expenses", :registrant => registrant.to_s)
      %table#expense_lines
        %thead
          %tr
            %th= RegistrantExpenseItem.model_name.human
            %th
            %th= t(".cost")
            %th
              = t(".paid")
              ?
            %th
        %tbody
          = render partial: "/registrants/registrant_paid_expenses", locals: { details: true }
          = render partial: "/registrants/registrant_unpaid_expenses", locals: { include_form: true, details: true }
        %tfoot
          %tr
            %th= t(".total")
            %th= print_formatted_currency(registrant.expenses_total)
            %th{:colspan => "3"}
