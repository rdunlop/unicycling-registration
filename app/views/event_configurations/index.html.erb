<h1>Event Configurations</h1>

<table>
  <tr>
    <th>Short name</th>
    <th>Long name</th>
    <th>Location</th>
    <th>Dates description</th>
    <th>Event url</th>
    <th>Waiver</th>
    <th>Waiver url</th>
    <th>Comp/Non-Comp url</th>
    <th>Start date</th>
    <th>Logo</th>
    <th>Currency</th>
    <th>Contact email</th>
    <th>Artistic closed date</th>
    <th>Standard skill closed date</th>
    <th>Tshirt closed date</th>
    <th>Test Mode</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @event_configurations.each do |event_configuration| %>
  <tr>
    <td><%= event_configuration.short_name %></td>
    <td><%= event_configuration.long_name %></td>
    <td><%= event_configuration.location %></td>
    <td><%= event_configuration.dates_description %></td>
    <td><%= event_configuration.event_url %></td>
    <td><%= event_configuration.waiver %></td>
    <td><%= event_configuration.waiver_url %></td>
    <td><%= event_configuration.comp_noncomp_url %></td>
    <td><%= event_configuration.start_date %></td>
    <td><%= image_tag(logo_event_configuration_path(event_configuration), :width => "100px") %></td>
    <td><%= event_configuration.currency %></td>
    <td><%= event_configuration.contact_email %></td>
    <td><%= event_configuration.artistic_closed_date %></td>
    <td><%= event_configuration.standard_skill_closed_date %></td>
    <td><%= event_configuration.tshirt_closed_date %></td>
    <td><%= event_configuration.test_mode %></td>
    <td><%= link_to 'Show', event_configuration %></td>
    <td><%= link_to 'Edit', edit_event_configuration_path(event_configuration) %></td>
    <td><%= link_to 'Destroy', event_configuration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

