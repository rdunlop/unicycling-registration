- if (controller_name != 'sessions' && controller_name != 'custom_sessions')
  %b
    = t(".already_have_an_account")
    = link_to t(".log_in_here"), new_session_path(resource_name)
  %br
  %br
- if devise_mapping.registerable? && (controller_name != 'registrations' && controller_name != 'custom_registrations')
  %b
    = t(".new_user")
    = link_to t(".sign_up_here"), new_registration_path(resource_name)
  %br
  %br
- if devise_mapping.recoverable? && controller_name != 'passwords'
  = link_to t(".forgot_your_password"), new_password_path(resource_name)
  %br
- if devise_mapping.confirmable? && controller_name != 'confirmations'
  = link_to t(".need_confirmation_instructions"), new_confirmation_path(resource_name)
